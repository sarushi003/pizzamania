<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/homeRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_home"
    android:padding="16dp">

    <!-- Top row: greeting + profile -->
    <LinearLayout
        android:id="@+id/topRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvHello"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello, Sarushi ðŸ‘‹"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/tvSubHello"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What would you like to eat today?"
                android:textSize="13sp"
                android:textColor="#E8F0FF"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/ivProfile"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_profile"
            android:background="@drawable/profile_circle_bg"
            android:padding="8dp"/>
    </LinearLayout>

    <!-- Search box -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/searchCard"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="14dp"
        app:cardElevation="4dp"
        android:background="@drawable/search_card_bg"
        app:layout_constraintTop_toBottomOf="@id/topRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_search"
                android:contentDescription="search" />

            <EditText
                android:id="@+id/etSearch"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="Search pizza, sides, drinks..."
                android:paddingStart="12dp"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/ivFilter"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_filter"
                android:contentDescription="filter"
                android:padding="6dp"
                android:background="@drawable/btn_small_bg"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Categories (horizontal chips) -->
    <HorizontalScrollView
        android:id="@+id/horizontalCategories"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fillViewport="false"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@id/searchCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/Widget.MaterialComponents.Chip"
                android:id="@+id/chip_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/category_chip_bg"
                android:padding="10dp"
                android:text="All" />

            <Space android:layout_width="12dp" android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/chip_pizza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/category_chip_bg"
                android:padding="10dp"
                android:text="Pizza" />

            <Space android:layout_width="12dp" android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/chip_sides"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/category_chip_bg"
                android:padding="10dp"
                android:text="Sides" />

            <Space android:layout_width="12dp" android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/chip_drinks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/category_chip_bg"
                android:padding="10dp"
                android:text="Drinks" />

        </LinearLayout>
    </HorizontalScrollView>

    <!-- Featured (horizontal RecyclerView placeholder) -->
    <TextView
        android:id="@+id/tvFeatured"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Featured"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/horizontalCategories"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFeatured"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:clipToPadding="false"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvFeatured"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Popular near you: vertical list placeholder -->
    <TextView
        android:id="@+id/tvPopular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Popular near you"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/rvFeatured"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPopular"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvPopular"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Bottom navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="12dp"
        app:menu="@menu/bottom_nav_menu"
        android:background="@drawable/nav_background"
        app:itemIconTint="@android:color/white"
        app:itemTextColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Floating cart FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabCart"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_cart"
        app:backgroundTint="@color/purple_700"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="18dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>